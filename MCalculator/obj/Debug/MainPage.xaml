<Page
    x:Class="MCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="680.993" Width="402.332">


    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="#FF147C48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28"/>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Margin="10,35,14,10.167" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="309*"/>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' Content="0"                      Height="85" HorizontalAlignment="Left" Margin="0,494,0,0" Name="button1" VerticalAlignment="Top" Width="109" FontSize="35"  />
            <Button x:ConnectionId='2' Content="1"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="0,415,0,0" Name="button2" VerticalAlignment="Top" Width="109" />
            <Button x:ConnectionId='3' Content="4"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="0,337,0,0" Name="button3" VerticalAlignment="Top" Width="109" />
            <Button x:ConnectionId='4' Content="7"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="0,271,0,0" Name="button4" VerticalAlignment="Top" Width="109" />
            <Button x:ConnectionId='5' Content="2"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="109,415,0,0" Name="button5" VerticalAlignment="Top" Width="139" />
            <Button x:ConnectionId='6' Content="5"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="109,337,0,0" Name="button6" VerticalAlignment="Top" Width="144" />
            <Button x:ConnectionId='7' Content="8"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="109,271,0,0" Name="button7" VerticalAlignment="Top" Width="139" />
            <Button x:ConnectionId='8' Content="9"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="248,270,0,0" Name="button8" VerticalAlignment="Top" Width="114" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" />
            <Button x:ConnectionId='9' Content="6"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="253,337,0,0" Name="button9" VerticalAlignment="Top" Width="109" Grid.ColumnSpan="2" />
            <Button x:ConnectionId='10' Content="3"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="248,415,0,0" Name="button10" VerticalAlignment="Top" Width="114" Grid.ColumnSpan="2" />
            <Button x:ConnectionId='11' Content="/"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="0,205,0,0" Name="button11" VerticalAlignment="Top" Width="71" RenderTransformOrigin="0.5,0.5" />
            <Button x:ConnectionId='12' Content="*"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="109,204,0,0" Name="button12" VerticalAlignment="Top" Width="139" />
            <Button x:ConnectionId='13' Content="-"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="248,205,0,0" Name="button13" VerticalAlignment="Top" Width="114" Grid.ColumnSpan="2" />
            <Button x:ConnectionId='14' Content="+"                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="270,494,-0.667,0" Name="button14" VerticalAlignment="Top" Width="109" Grid.ColumnSpan="3" />
            <Button x:ConnectionId='15' Content="="                      FontSize="35" Height="85" HorizontalAlignment="Left" Margin="109,494,0,0" Name="button15" VerticalAlignment="Top" Width="161" />
            <Button x:ConnectionId='16' Content="Del"                   FontSize="35" Height="85" HorizontalAlignment="Left" Margin="0,133,0,0" Name="button16" VerticalAlignment="Top" Width="221" />
            <Button x:ConnectionId='17' Content="R"                 FontSize="35" Height="85" HorizontalAlignment="Left" Margin="216,133,0,0" Name="button17" VerticalAlignment="Top" Width="156" Grid.ColumnSpan="3" />
            <TextBox Name="tb" Height="89" Margin="0,43,-1.667,0" VerticalAlignment="Top" FontSize="35" Background="Black" BorderBrush="White" Foreground="White" IsEnabled="True" IsReadOnly="False" Grid.ColumnSpan="3" />
        </Grid>
        <TextBlock x:Name="PageTitle" Text="Mercie Calculator" Margin="19,0,-1,563.167"  FontSize="33" Grid.Row="1" />
    </Grid>



</Page>

